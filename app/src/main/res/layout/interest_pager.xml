<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/id_interest_card"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="@dimen/size_16_dp"
            app:cardCornerRadius="@dimen/size_28_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/id_interestLottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_cacheComposition="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/music"
                app:lottie_renderMode="automatic"
                app:lottie_repeatMode="reverse" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/id_interestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/cinzel"
            android:text="Music"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30_sp"
            app:layout_constraintStart_toStartOf="@+id/id_interest_card"
            app:layout_constraintTop_toBottomOf="@+id/id_interest_card" />

        <TextView
            android:id="@+id/id_interestNameDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poiret_one"
            android:text="interest desc"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20_sp"
            app:layout_constraintStart_toStartOf="@+id/id_interest_card"
            app:layout_constraintTop_toBottomOf="@+id/id_interestName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>