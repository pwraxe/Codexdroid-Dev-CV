<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transperent"
            android:elevation="@dimen/size_8_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/particleView"
            app:layout_constraintTop_toTopOf="@+id/particleView"
            app:navigationIcon="@drawable/ic_back_button" />

        <me.ibrahimsn.particle.ParticleView
            android:id="@+id/particleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:particleColor="@android:color/holo_green_dark"
            app:particleCount="60"
            app:particleLineColor="@android:color/holo_green_dark"
            app:particleLinesEnabled="true"
            app:particleMaxRadius="10"
            app:particleMinRadius="3"
            app:particlesBackgroundColor="#000" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/id_about_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_aboutCard1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/size_20_dp"
                    android:layout_margin="@dimen/size_16_dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/id_img_motivated"
                            android:layout_width="@dimen/size_80_dp"
                            android:layout_height="@dimen/size_80_dp"
                            android:layout_marginStart="20dp"
                            android:padding="@dimen/size_20_dp"
                            android:src="@drawable/ic_motivated"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/id_motivatedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poiret_one"
                            android:text="#Motivated"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/text_size_20_sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/id_img_motivated"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_aboutCard2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/size_20_dp"
                    android:layout_margin="@dimen/size_16_dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/id_img_programmer"
                            android:layout_width="@dimen/size_80_dp"
                            android:layout_height="@dimen/size_80_dp"
                            android:layout_marginStart="20dp"
                            android:padding="@dimen/size_20_dp"
                            android:src="@drawable/ic_programmer"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/id_programmerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poiret_one"
                            android:text="#Programmer"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/text_size_20_sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/id_img_programmer"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_aboutCard3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/size_20_dp"
                    android:layout_margin="@dimen/size_16_dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/id_img_problem_solver"
                            android:layout_width="@dimen/size_80_dp"
                            android:layout_height="@dimen/size_80_dp"
                            android:layout_marginStart="20dp"
                            android:padding="@dimen/size_20_dp"
                            android:src="@drawable/ic_problem_solver"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/id_problemSolverText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poiret_one"
                            android:text="#Problem Solver"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/text_size_20_sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/id_img_problem_solver"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_aboutCard4"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/size_20_dp"
                    android:layout_margin="@dimen/size_16_dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/id_img_music"
                            android:layout_width="@dimen/size_80_dp"
                            android:layout_height="@dimen/size_80_dp"
                            android:layout_marginStart="20dp"
                            android:padding="@dimen/size_20_dp"
                            android:src="@drawable/ic_self_study"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/id_musicText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poiret_one"
                            android:text="#Self Learner"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/text_size_20_sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/id_img_music"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
























